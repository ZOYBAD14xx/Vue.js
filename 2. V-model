<template>
<div>
  <h1>V-model</h1>
  <input v-model="message" type="text" placeholder="Enter message">
  <div>{{message}}</div>
  <button @click="message=''">Reset</button>
</div>
</template>

<script>
export default {
  name: "app",
  data() {
    return {
      message:""  
    }
  },

}
</script>

<style>

</style>
